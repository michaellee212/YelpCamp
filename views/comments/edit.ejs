<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Editing comment</h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" value="<%=comment.text%>"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back to campgrounds</a>
        </div>
    </div>
</div>



